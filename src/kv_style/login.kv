#:kivy 2.3.0

<LoginScreen>:
    username: username
    password: password

    Image:
        source: '../other/images/temp_logo.png'
        fit_mode: 'scale-down'

    GridLayout:
        cols:1
        size: root.width, root.height
        Label:
            font_size: 50
            top: root.top - 50
            text: 'Welcome to SpotiVibe'

        GridLayout:
            cols:2

            Label:
                text: "User Name: "

            TextInput:
                multiline:False
                id: username

            Label:
                text: "Password: "

            TextInput:
                multiline:False
                password:True
                id: password

        Button:
            text: "Login"
            size: (70,30)
            size_hint:(None,None)
            background_color:[0,1,0,1]
            on_press: root.check_status()
            id: login_button

        Button:
            text: "Create Account"
            size: (130,30)
            size_hint:(None,None)
            background_color:[0,1,0,1]
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'create_account_page'
            id: create_account_link_button