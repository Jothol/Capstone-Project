#:import utils kivy.utils
<RecommendationScreen>:

    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#1db954')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 10

        # Image Input
        AsyncImage:
            id: image_input
            source: root.image_source
            size_hint: None, None
            size: 300, 300  # Adjust as needed
            pos: self.parent.pos

        # Labels
        Label:
            id: artist_name
            text: root.Artist_text
            size_hint: None, None
            size: self.texture_size
            pos: self.parent.pos

        Label:
            id: track_name
            text: root.Song_text
            size_hint: None, None
            size: self.texture_size
            pos: self.parent.pos


        # Rerun Button
        Button:
            text: 'Rerun App'
            size_hint: None, None
            size: self.texture_size
            pos: self.parent.pos
            on_release: root.rerun()
            background_color: utils.get_color_from_hex('#1ed760')
