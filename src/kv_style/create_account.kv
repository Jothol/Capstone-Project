# create_account.kv

<CreateAccount>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint: (None, None)
            size: (250, 110)

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10

                Label:
                    size_hint_x: 0.3
                    text: 'Username:'

                TextInput:
                    id: username_input
                    multiline: False

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10

                Label:
                    size_hint_x: 0.3
                    text: 'Password:'

                TextInput:
                    id: password_input
                    multiline: False

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'

                Button:
                    size_hint: (None, None)
                    size: (100, 30)
                    text: 'Submit'
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.submit(username_input.text, password_input.text)
                        root.manager.current = 'login_page'

    Button:
        size_hint: (None, None)
        size: (100, 30)
        text: 'Go Back'
        pos_hint: {'x': 0.01, 'y': 0.01}
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'login_page'