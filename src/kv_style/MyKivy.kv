#:import utils kivy.utils
ScreenManager:
    id: screen_manager

    Screen:
        name: 'input_screen'

        GridLayout:
            cols: 2

            Label:
                text: "Enter Text:"
                pos: self.parent.pos
                background_color: 1,1,1,1

            TextInput:
                id: input_text
                multiline: False
                pos: self.parent.pos

            Button:
                text: "Register"
                on_press: app.register_text(input_text.text)
                pos: self.parent.pos

    Screen:
        name: 'display_screen'

        BoxLayout:
            orientation: 'vertical'
            Label:
                id: display_label
                text: "Registered Text: "

            Button:
                text: "Back"
                on_press: app.goto_input_screen()
