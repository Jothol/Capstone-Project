#:kivy 2.3.0

<RecommendationInputScreen>:
    Image:
        source: '../other/images/temp_logo.png'
        fit_mode: 'scale-down'

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: (None, None)
            size: (250, 250)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10, 10, 10, 10]

            Label:
                text: 'Input Song Name'
                color: [0,0.4,0,1]
                font_size: 20
                bold: True
            BoxLayout:
                padding: 10

                TextInput:
                    id: track_input
                    multiline: False
                    hint_text: 'Song Name: (Let It Be)'

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'

                Button:
                    size_hint: (None, None)
                    size: (130, 30)
                    text: 'Enter'
                    background_color:[0,1,0,1]
                    on_press:
                        root.manager.transition.direction = 'down'
                        root.submit(track_input.text)