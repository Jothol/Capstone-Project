<Tab2>:
    RelativeLayout:
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: self.minimum_size
            padding: 10

            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10, 10, 10, 10]

            Button:
                size_hint: (None, None)
                size: (100, 30)
                text: 'Rewind'
                background_color: [0, 1, 0, 1]
                on_press: root.rewind()

            Button:
                size_hint: (None, None)
                size: (100, 30)
                text: 'Play'
                background_color: [0, 1, 0, 1]
                on_press: root.play()

            Button:
                size_hint: (None, None)
                size: (100, 30)
                text: 'Skip'
                background_color: [0, 1, 0, 1]
                on_press: root.skip()

            Button:
                size_hint: (None, None)
                size: (100, 30)
                text: 'Shuffle'
                background_color: [0, 1, 0, 1]
                on_press: root.shuffle()
        BoxLayout:
            size_hint: (None, None)
            size: (dp(100), dp(80))
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}

            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10, 10, 10, 10]

            Label:
                text: 'Volume'
                color: [0,0,0,1]

            Slider:
                id: volume_slider
                min: 0
                max: 100
                step: 1
                value: 50

            Label:
                text: f'Volume: {int(volume_slider.value)}%'
                color: [0,0,0,1]