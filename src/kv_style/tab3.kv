<Tab3>:
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            padding: dp(30)
            spacing: dp(10)
            AnchorLayout:
                anchor_x: 'left'
                size_hint: None, None
                size: self.parent.width - dp(60), dp(30)
                Label:
                    text: 'Friends:'
                    font_size: dp(20)
                    size_hint: None, None
                    size: self.texture_size
            AnchorLayout:
                anchor_x: 'left'  # Aligns children to the left
                anchor_y: 'top'
                size_hint: None, None
                size: self.parent.width - dp(60), dp(150)
                padding: dp(10)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White color
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    id: friend_list
                    size_hint: None, None
                    size: self.texture_size
                    color: (0, 0, 0, 1)
                    text: "<loading>"
            AnchorLayout:
                anchor_x: 'center'  # Aligns children to the left
                anchor_y: 'top'
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: None, None
                    size: self.minimum_size
                    spacing: dp(10)
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: None, None
                        size: self.minimum_size
                        spacing: dp(5)
                        TextInput:
                            id: friend_input
                            size_hint: None, None
                            size: dp(150), dp(30)
                            multiline: False
                            hint_text: 'Username'
                        Button:
                            text: 'Send Friend Request'
                            size_hint: None, None
                            size: dp(150), dp(50)
                            on_press: root.invite_friend(friend_input.text)
                        Button:
                            text: 'Remove Friend'
                            size_hint: None, None
                            size: dp(150), dp(50)
                            on_press: root.remove_friend(friend_input.text)
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_x: None
                        width: self.minimum_size[0]
                        BoxLayout:
                            id: dropdown_box
                            canvas.before:
                                Color:
                                    rgba: 1, 1, 1, 1  # White color
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            orientation: 'vertical'
                            size_hint: None, None
                            size: self.minimum_size
                            Button:
                                text: 'Pending Invites'
                                size_hint: None, None
                                size: dp(150), dp(50)
                                on_press:
                                    root.toggle_dropdown()
                        BoxLayout:
                            id: blank_space
                            orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            padding: dp(30)
            spacing: dp(10)
            AnchorLayout:
                anchor_x: 'left'
                size_hint: None, None
                size: self.parent.width - dp(60), dp(30)
                Label:
                    text: 'Account:'
                    font_size: dp(20)
                    size_hint: None, None
                    size: self.texture_size
            AnchorLayout:
                anchor_x: 'left'  # Aligns children to the left
                anchor_y: 'top'
                size_hint: None, None
                size: self.parent.width - dp(60), dp(150)
                padding: dp(10)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White color
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    id: account_info
                    size_hint: None, None
                    size: self.texture_size
                    color: (0, 0, 0, 1)
                    text: "<loading>"
            AnchorLayout:
                anchor_x: 'center'  # Aligns children to the left
                anchor_y: 'top'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: None, None
                    size: self.minimum_size
                    spacing: dp(10)
                    Button:
                        text: 'Edit Account Info'
                        size_hint: None, None
                        size: dp(150), dp(50)
                        on_press:
                            root.parent.parent.parent.parent.transition.direction = 'up'
                            root.parent.parent.parent.parent.current = 'add_account_info_page'
                    Button:
                        text: 'Change Password'
                        size_hint: None, None
                        size: dp(150), dp(50)
                        on_press:
                            root.parent.parent.parent.parent.transition.direction = 'up'
                            root.parent.parent.parent.parent.current = 'change_password_page'
                    Button:
                        text: 'Logout'
                        size_hint: None, None
                        size: dp(150), dp(50)
                        on_press:
                            root.logout()
                    Button:
                        text: 'Delete Account'
                        size_hint: None, None
                        size: dp(150), dp(50)
                        on_press:
                            root.delete_account()
            BoxLayout:
                id: blank_space
                orientation: 'vertical'
