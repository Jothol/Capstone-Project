# session_home.kv
# listening_session.kv

<Tab1>
    RelativeLayout:
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: self.minimum_size
            padding: 10

            pos_hint: {'center_x': 0.25, 'center_y': 0.5}

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10, 10, 10, 10]

            Button:
                text: 'Devices'
                size_hint: None, None
                on_release: root.open_dropdown(self)
                size_hint: (None, None)
                size: (dp(110), dp(50))

            DropDown:
                id: dropdown
                on_select: root.select_option(args[1])

                Button:
                    text: 'Device 1'
                    size_hint_y: None
                    height: 44
                    on_release: dropdown.select(self.text)

                Button:
                    text: 'Device 2'
                    size_hint_y: None
                    height: 44
                    on_release: dropdown.select(self.text)

                Button:
                    text: 'Device 3'
                    size_hint_y: None
                    height: 44
                    on_release: dropdown.select(self.text)