#:import utils kivy.utils
#:import HoverableButton src.kv_screens.hoverablebutton

<RecommendationsTest>:

    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#1db954')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 10

        # Image Input
        AsyncImage:
            id: image_input
            source: root.image_source
            size_hint: None, None
            size: 300, 300  # Adjust as needed
            pos: self.parent.pos

        # Labels
        Label:
            id: label1
            text: root.Artist_text
            size_hint: None, None
            size: self.texture_size
            pos: self.parent.pos

        Label:
            id: label2
            text: root.Song_text
            size_hint: None, None
            size: self.texture_size
            pos: self.parent.pos


        # Rerun Button
        HoverableButton:
            text: 'Rerun App'
            size_hint: None, None
            size: self.texture_size
            pos: self.parent.pos
            on_release: app.rerun_app()
            background_color: utils.get_color_from_hex('#1ed760')
