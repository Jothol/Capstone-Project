#:kivy 2.3.0

<ListeningSessionScreen>:
    Image:
        source: '../other/images/temp_logo.png'
        fit_mode: 'scale-down'

    Label:
        id: session_label
        size_hint: (None, None)
        size: (600, 40)
        font_size: 20
        pos_hint: {'x': 0.65, 'y': 0.12}
        bold: True

    Label:
        id: user_label
        size_hint: (None, None)
        size: (600, 40)
        font_size: 20
        pos_hint: {'x': 0.65, 'y': 0.09}
        bold: True

    # Button:
        # size_hint: (None, None)
        # size: (130, 30)
        # text: 'Leave'
        # pos_hint: {'x': 0.01, 'y': 0.09}
        # background_color:[0,1,0,1]
        # on_press:
            # root.manager.transition.direction = 'up'
            # root.submit()

    Label:
        id: error_message
        text: ''
        color: [1,0,0,0]


<TabBar2>:
    size_hint_y: None
    height: dp(50)  # Set the height in dp (adjust as needed)

    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # Dark grey color
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0, 0, 0, 1  # Dark grey color
        Line:
            width: 1
            points: [self.width / 3, 0, self.width / 3, self.height]
        Line:
            width: 1
            points: [2 * self.width / 3, 0, 2 * self.width / 3, self.height]


    Button:
        id: chat_button
        size_hint: None, None  # Disable the x-size hint
        size: dp(50), dp(50)  # Set the width in dp (adjust as needed)
        pos_hint: {'center_x': 1/6, 'center_y': 0.5}
        background_color: 0, 0, 0, 0

        on_press:
            root.switch_screen('1')

        Image:
            id: chat_image
            source: '../other/images/chat_icon.png'
            center: self.parent.center
            size: self.parent.height * 0.8, self.parent.height * 0.8
            canvas.after:
                Color:
                    rgba: 0, 1, 0, 0.5  # Red tint with 50% opacity
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: self.source

    Button:
        id: music_button
        size_hint: None, None  # Disable the x-size hint
        size: dp(50), dp(50)  # Set the width in dp (adjust as needed)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        background_color: 0, 0, 0, 0

        on_press:
            root.switch_screen('2')

        Image:
            id: music_image
            source: '../other/images/music_icon.png'
            center: self.parent.center
            size: self.parent.height * 0.5, self.parent.height * 0.5
            canvas.after:
                Color:
                    rgba: 0, 1, 0, 0  # Red tint with 50% opacity
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: self.source

    Button:
        id: setting_button
        size_hint: None, None  # Disable the x-size hint
        size: dp(50), dp(50)  # Set the width in dp (adjust as needed)
        pos_hint: {'center_x': 5/6, 'center_y': 0.5}
        background_color: 0, 0, 0, 0

        on_press:
            root.switch_screen('3')

        Image:
            id: settings_image
            source: '../other/images/settings_icon.png'
            size: self.parent.height * 0.5, self.parent.height * 0.5
            center: self.parent.center
            canvas.after:
                Color:
                    rgba: 0, 1, 0, 0  # Red tint with 50% opacity
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: self.source

#bl2 = BoxLayout(orientation='horizontal', pos=(dp(self.width / 5), dp(400)))
<HostBar>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: host_bar
            orientation: 'horizontal'
            size_hint: None, None
            size: self.parent.parent.width, dp(50)
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            # ...
            Button:
                text: 'Invite User'
                size_hint: None, None
                size: dp(130), dp(30)
                background_color: [0, 1, 0, 1]
                on_press:
                    root.open_bar('Invite User')
            Button:
                text: 'Remove User'
                size_hint: None, None
                size: dp(130), dp(30)
                background_color: [0, 1, 0, 1]
                on_press:
                    root.open_bar('Remove User')
            Button:
                text: 'New Host'
                size_hint: None, None
                size: dp(130), dp(30)
                background_color: [0, 1, 0, 1]
                on_press:
                    root.open_bar('New Host')
            Button:
                text: 'End Session'
                size_hint: None, None
                size: dp(130), dp(30)
                background_color: [0, 1, 0, 1]
            Button:
                text: 'Private'
                id: status
                size_hint: None, None
                size: dp(130), dp(30)
                background_color: [1, 0, 0.4, 1]
                on_press:
                    root.change_status()
        BoxLayout:
            id: blank_space

<HostDropBar>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: dp(400), dp(30)
            canvas.before:
                Color:
                    rgba: 1, .2, 1, 1
                Line:
                    width: dp(1)
                    rectangle: self.x, self.y, self.width, self.height
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                id: input_label
                text: ''
                color: [0,0.4,0,1]
                font_size: 20
                bold: True
                pos: dp(self.width/2), dp(700)
            TextInput:
                multiline: False
                hint_text: '(User Name)'
            Button:
                id: button_input
                size_hint: (None, None)
                size: (130, 30)
                text: 'Enter'
                background_color:[0,1,0,1]
        BoxLayout:
            id: blank_space
            size_hint: None, None